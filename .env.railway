# Railway Deployment Configuration

PORT=8000
PYTHONUNBUFFERED=1
PRODUCTION=true

# Database will be provided by Railway
# DATABASE_URL will be automatically set by Railway PostgreSQL service

# Required environment variables (set these in Railway dashboard):
# SECRET_KEY=your-production-secret-key-256-bits
# ADMIN_PASSWORD=your-admin-password

# Optional database configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600