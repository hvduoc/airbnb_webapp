# ==================== GENERAL APPLICATION ====================
# Môi trường triển khai (development, staging, production)
ENVIRONMENT=development

# URL ứng dụng
APP_URL=http://localhost:8000
APP_NAME="Airbnb Vietnam WebApp"
APP_VERSION=1.0.0

# Cấu hình server
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# ==================== SECURITY CONFIGURATION ====================
# SECRET_KEY cho JWT và session (QUAN TRỌNG: Thay đổi trong production!)
SECRET_KEY=your-super-secret-key-here-change-in-production

# JWT Algorithm và thời gian hết hạn
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Mã hóa mật khẩu
BCRYPT_ROUNDS=12

# Bảo mật đăng nhập
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=300
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORD=true

# ==================== DATABASE CONFIGURATION ====================
# SQLite cho Development
DATABASE_TYPE=sqlite
SQLITE_DATABASE_URL=sqlite:///./app.db

# PostgreSQL cho Production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=airbnb_webapp
POSTGRES_USER=airbnb_user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_SSL_MODE=require

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ==================== REDIS CONFIGURATION ====================
# Redis cho Session Storage và Caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_SSL=false

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# ==================== LOGGING CONFIGURATION ====================
# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Logging
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# External Logging (ELK Stack)
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=airbnb-webapp-logs

# ==================== MONITORING & METRICS ====================
# Application Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics

# ==================== EMAIL CONFIGURATION ====================
# SMTP Settings cho Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# Email Templates
FROM_EMAIL=noreply@airbnb-webapp.com
SUPPORT_EMAIL=support@airbnb-webapp.com

# ==================== FILE UPLOAD & STORAGE ====================
# Local File Storage
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,csv

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=airbnb-webapp-uploads

# ==================== RATE LIMITING ====================
# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Specific endpoint limits
LOGIN_RATE_LIMIT=5
LOGIN_RATE_PERIOD=300

# ==================== CORS CONFIGURATION ====================
# Cross-Origin Resource Sharing
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ==================== SSL/TLS CONFIGURATION ====================
# SSL Settings cho Production
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/airbnb-webapp.crt
SSL_KEY_PATH=/etc/ssl/private/airbnb-webapp.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt

# ==================== BACKUP CONFIGURATION ====================
# Automated Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
BACKUP_COMPRESSION=true

# Cloud Backup
BACKUP_TO_S3=false
BACKUP_S3_BUCKET=airbnb-webapp-backups

# ==================== FEATURE FLAGS ====================
# Feature Toggles
ENABLE_USER_REGISTRATION=true
ENABLE_CSV_UPLOAD=true
ENABLE_EXPENSE_TRACKING=true
ENABLE_ANALYTICS=true
ENABLE_API_DOCS=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Hệ thống đang bảo trì. Vui lòng thử lại sau."

# ==================== LOCALIZATION ====================
# Ngôn ngữ và múi giờ
DEFAULT_LANGUAGE=vi
TIMEZONE=Asia/Ho_Chi_Minh
CURRENCY=VND
DATE_FORMAT=%d/%m/%Y
TIME_FORMAT=%H:%M:%S

# ==================== DEVELOPMENT TOOLS ====================
# Development và Testing
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILER=false
ENABLE_MOCK_DATA=false

# Testing Database
TEST_DATABASE_URL=sqlite:///./test.db

# ================================================================
# PRODUCTION SECURITY CHECKLIST:
# 
# 1. Thay đổi SECRET_KEY thành giá trị ngẫu nhiên mạnh
# 2. Sử dụng PostgreSQL thay vì SQLite
# 3. Kích hoạt SSL/TLS (SSL_ENABLED=true)
# 4. Cấu hình CORS chính xác cho domain production
# 5. Kích hoạt Rate Limiting (RATE_LIMIT_ENABLED=true)
# 6. Cấu hình Backup tự động
# 7. Thiết lập Monitoring và Logging
# 8. Tắt Debug mode (DEBUG=false)
# 9. Sử dụng strong passwords cho tất cả services
# 10. Kích hoạt Redis SSL cho production
# ================================================================