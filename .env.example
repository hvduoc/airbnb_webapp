# Airbnb WebApp Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration - Cấu hình Database
DATABASE_URL=sqlite:///./app.db
# Cho PostgreSQL production (thay đổi thông tin kết nối):
# DATABASE_URL=postgresql://username:password@localhost:5432/airbnb_db

# Database Connection Pool - Cấu hình Pool kết nối (chỉ cho PostgreSQL)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security Configuration - CRITICAL: Change SECRET_KEY in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-jwt-key-here-REQUIRED-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
BCRYPT_ROUNDS=12

# CORS Configuration (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# Application Configuration
APP_NAME=Airbnb Revenue Management System
APP_VERSION=1.0.0
DEBUG=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Self-hosted scheduler URL
SELF_BASE_URL=http://127.0.0.1:8000

# Production settings
PRODUCTION=false
HTTPS_ONLY=false

# Session configuration
SESSION_MAX_AGE=3600

# File upload limits
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10

# Admin defaults (change immediately in production)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change_this_password_immediately
DEFAULT_ADMIN_EMAIL=admin@yourcompany.com